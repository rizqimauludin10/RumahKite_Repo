<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descOne"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Perbaikan/Instalasi"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="16sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/descTwo"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Rp. 260.000"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="20sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/syarat"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Syarat dan Ketentuan : "
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/descThree"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/descThree"
                android:textColor="@color/text"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/descFive"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/descFour"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/descSix"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/descFive"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/descSeven"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/descSix"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/descEight"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descSeven"
                android:textColor="@color/text"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/desNine"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/descEight"
                android:textColor="#FF3636"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/descTen"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descNine"
                android:textAlignment="textStart"
                android:textColor="@color/text"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/descEleven"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descTen"
                android:textColor="@color/basecolor"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/descTwelve"
                fontPath="font/TitilliumWeb-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/descEleven"
                android:textColor="@color/text"
                android:textSize="14sp"
                tools:ignore="MissingPrefix" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/ripple_btn_dialogyes"
                android:textColor="@color/white"
                android:text="Button" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>